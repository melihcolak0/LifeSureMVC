
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LifeSure Insurance Admin Panel</title>

    <link rel="stylesheet" href="/voler-main/dist/assets/css/bootstrap.css">

    <link rel="stylesheet" href="/voler-main/dist/assets/vendors/perfect-scrollbar/perfect-scrollbar.css">
    <link rel="stylesheet" href="/voler-main/dist/assets/css/app.css">
    <link rel="shortcut icon" href="/voler-main/dist/assets/images/favicon.svg" type="image/x-icon">
</head>
<body>
    <div id="app">
        <div id="sidebar" class='active'>
            <div class="sidebar-wrapper active">
                <div class="sidebar-header">
                    <img src="/voler-main/dist/assets/images/logo.svg" alt="" srcset="">
                </div>
                <div class="sidebar-menu">
                    <ul class="menu">

                        <li class="sidebar-item">
                            <a href="#" class='sidebar-link'>
                                <i data-feather="home" width="20"></i>
                                <span>Dashboard</span>
                            </a>
                        </li>
                        <li class="sidebar-item  ">
                            <a href="/Default/Index" class='sidebar-link'>
                                <i data-feather="globe" width="20"></i>
                                <span>Ana Sayfa</span>
                            </a>
                        </li>
                        <li class="sidebar-item  ">
                            <a href="/About/Index" class='sidebar-link'>
                                <i data-feather="info" width="20"></i>
                                <span>Hakkında</span>
                            </a>
                        </li>
                        <li class="sidebar-item  ">
                            <a href="/Feature/Index" class='sidebar-link'>
                                <i data-feather="star" width="20"></i>
                                <span>Özellikler</span>
                            </a>
                        </li>
                        <li class="sidebar-item  ">
                            <a href="/Member/Index" class='sidebar-link'>
                                <i data-feather="users" width="20"></i>
                                <span>Ekip Üyeleri</span>
                            </a>
                        </li>
                        <li class="sidebar-item  ">
                            <a href="/Faq/Index" class='sidebar-link'>
                                <i data-feather="help-circle" width="20"></i>
                                <span>Sıkça Sorulan Sorular</span>
                            </a>
                        </li>
                        <li class="sidebar-item  ">
                            <a href="/Slider/Index" class='sidebar-link'>
                                <i data-feather="image" width="20"></i>
                                <span>Slider</span>
                            </a>
                        </li>
                        <li class="sidebar-item  ">
                            <a href="/Service/Index" class='sidebar-link'>
                                <i data-feather="briefcase" width="20"></i>
                                <span>Hizmetler</span>
                            </a>
                        </li>
                        <li class="sidebar-item  ">
                            <a href="/Testimonial/Index" class='sidebar-link'>
                                <i data-feather="message-square" width="20"></i>
                                <span>Referanslar</span>
                            </a>
                        </li>
                        <li class="sidebar-item  ">
                            <a href="/Contact/Index" class='sidebar-link'>
                                <i data-feather="phone" width="20"></i>
                                <span>İletişim</span>
                            </a>
                        </li>
                    </ul>
                </div>
                <button class="sidebar-toggler btn x"><i data-feather="x"></i></button>
            </div>
        </div>
        <div id="main">
            <nav class="navbar navbar-header navbar-expand navbar-light">
                <a class="sidebar-toggler" href="#"><span class="navbar-toggler-icon"></span></a>
                <button class="btn navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav d-flex align-items-center navbar-light ms-auto">
                        <li class="dropdown nav-icon">
                            <a href="#" data-bs-toggle="dropdown" class="nav-link  dropdown-toggle nav-link-lg nav-link-user">
                                <div class="d-lg-inline-block">
                                    <i data-feather="bell"></i>
                                </div>
                            </a>
                            <div class="dropdown-menu dropdown-menu-end dropdown-menu-large">
                                <h6 class='py-2 px-4'>Bildirimler</h6>
                                <ul class="list-group rounded-none">
                                    <li class="list-group-item border-0 align-items-start">
                                        <div class="avatar bg-success me-3">
                                            <span class="avatar-content"><i data-feather="shopping-cart"></i></span>
                                        </div>
                                        <div>
                                            <h6 class='text-bold'>New Order</h6>
                                            <p class='text-xs'>
                                                An order made by Ahmad Saugi for product Samsung Galaxy S69
                                            </p>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </li>
                        <li class="dropdown nav-icon me-2">
                            <a href="#" data-bs-toggle="dropdown" class="nav-link dropdown-toggle nav-link-lg nav-link-user">
                                <div class="d-lg-inline-block">
                                    <i data-feather="mail"></i>
                                </div>
                            </a>
                            <div class="dropdown-menu dropdown-menu-end">
                                <a class="dropdown-item" href="#"><i data-feather="user"></i> Account</a>
                                <a class="dropdown-item active" href="#"><i data-feather="mail"></i> Messages</a>
                                <a class="dropdown-item" href="#"><i data-feather="settings"></i> Settings</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#"><i data-feather="log-out"></i> Logout</a>
                            </div>
                        </li>
                        <li class="dropdown">
                            <a href="#" data-bs-toggle="dropdown" class="nav-link dropdown-toggle nav-link-lg nav-link-user">
                                <div class="avatar me-1">
                                    <img src="/voler-main/dist/assets/images/avatar/avatar-s-1.png" alt="" srcset="">
                                </div>
                                <div class="d-none d-md-block d-lg-inline-block">Admin</div>
                            </a>
                            <div class="dropdown-menu dropdown-menu-end">
                                <a class="dropdown-item" href="#"><i data-feather="user"></i> Account</a>
                                <a class="dropdown-item active" href="#"><i data-feather="mail"></i> Messages</a>
                                <a class="dropdown-item" href="#"><i data-feather="settings"></i> Settings</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#"><i data-feather="log-out"></i> Logout</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </nav>

            <div class="main-content container-fluid">
                @RenderBody()
            </div>

            <footer>
                <div class="footer clearfix mb-0 text-muted">
                    <div class="float-start">
                        <p>@DateTime.Now.Year &copy; Voler</p>
                    </div>
                    <div class="float-end">
                        <p><a href="https://saugi.me">Saugi</a> tarafından <span class='text-danger'><i data-feather="heart"></i></span> ile tasarlandı</p>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="/voler-main/dist/assets/js/feather-icons/feather.min.js"></script>
    <script src="/voler-main/dist/assets/vendors/perfect-scrollbar/perfect-scrollbar.min.js"></script>
    <script src="/voler-main/dist/assets/js/app.js"></script>

    <script src="/voler-main/dist/assets/js/main.js"></script>
</body>
</html>
