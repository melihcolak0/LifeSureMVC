@model _07PC_MVC.Models.ViewModels.FaqViewModel
@{
    ViewBag.Title = "CreateFaq";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<div class="page-title">
    <div class="row">
        <div class="col-12 col-md-6 order-md-1 order-last">
            <h3>Yeni Sıkça Sorulan Soru Ekle</h3>
            <p class="text-subtitle text-muted">Sıkça Sorulan Sorular bölümünün oluşturma işlemini buradan gerçekleştirebilirsiniz.</p>
        </div>
        <div class="col-12 col-md-6 order-md-2 order-first">
            <nav aria-label="breadcrumb" class='breadcrumb-header'>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Sıkça Sorulan Sorular</li>
                </ol>
            </nav>
        </div>
    </div>
</div>

<section>
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <div class="col-md-12">
                    @using (Html.BeginForm("CreateFaq", "Faq", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            <label>SORU PROMPT</label>
                            @Html.TextBox("QuestionPrompt", ViewBag.QuestionPrompt as string ?? "", new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>SORU</label>
                            @Html.TextBoxFor(x => x.Question, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>CEVAP</label>
                            @Html.TextAreaFor(x => x.Answer, new { @class = "form-control", rows = 5 })
                        </div>
                        <div class="form-group mt-2">
                            <button type="submit" name="action" value="generateQuestion" class="btn btn-primary">Soru Oluştur</button>
                            <button type="submit" name="action" value="generateAnswer" class="btn btn-warning">Cevap Oluştur</button>
                            <button type="submit" name="action" value="save" class="btn btn-success">Ekle</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

