@model Faqs
@{
    ViewBag.Title = "UpdateFaq";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-title">
    <div class="row">
        <div class="col-12 col-md-6 order-md-1 order-last">
            <h3>Sıkça Sorulan Soru Güncelle</h3>
            <p class="text-subtitle text-muted">Sıkça Sorulan Sorular bölümünün güncelleme işlemini buradan gerçekleştirebilirsiniz.</p>
        </div>
        <div class="col-12 col-md-6 order-md-2 order-first">
            <nav aria-label="breadcrumb" class='breadcrumb-header'>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Sıkça Sorulan Sorular</li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<section>
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <div class="col-md-12">
                    <form method="post">
                        <input type="hidden" name="FaqId" value="@Model.FaqId" />
                        <div class="form-group">
                            <label>SORU PROMPT</label>
                            <input type="text" class="form-control" name="QuestionPrompt" value="@Model.QuestionPrompt">
                        </div>
                        <div class="form-group">
                            <label>SORU</label>
                            <input type="text" class="form-control" name="Question" value="@Model.Question">
                        </div>
                        <div class="form-group">
                            <label>CEVAP</label>
                            <textarea class="form-control" rows="5" name="Answer">@Model.Answer</textarea>
                        </div>
                        <button class="btn btn-primary">Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
