@model List<Services>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<div class="page-title">
    <div class="row">
        <div class="col-12 col-md-6 order-md-1 order-last">
            <h3>Hizmetler</h3>
            <p class="text-subtitle text-muted">Hizmetler bölümünün Listeleme, Oluşturma, Silme ve Güncelleme işlemlerini buradan gerçekleştirebilirsiniz.</p>
        </div>
        <div class="col-12 col-md-6 order-md-2 order-first">
            <nav aria-label="breadcrumb" class='breadcrumb-header'>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Hizmetler</li>
                </ol>
            </nav>
        </div>
    </div>
    <a href="/Service/CreateService" class="btn btn-primary">Yeni Hizmet Ekle</a>
    <br /> <br />
</div>

<section id="content-types">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3 d-flex mb-4">
                <div class="card h-100 d-flex flex-column">
                    <div class="card-content">
                        <div class="card-body">
                            <h4 class="card-title">@item.Title</h4>
                            <p class="card-text">@item.Description</p>
                        </div>
                        <img class="img-fluid" src="@item.ImageUrl" alt="Card image cap" style="max-width: 100%; height: auto;">
                    </div>
                    <div class="card-footer mt-auto d-flex justify-content-between align-items-center">
                        <div class="service-icon p-3">
                            <i class="@item.Icon"></i>
                        </div>
                        <div class="d-flex gap-2">
                            <a href="/Service/DeleteService/@item.ServiceId" class="btn btn-danger btn-sm">Sil</a>
                            <a href="/Service/UpdateService/@item.ServiceId" class="btn btn-warning btn-sm">Güncelle</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
