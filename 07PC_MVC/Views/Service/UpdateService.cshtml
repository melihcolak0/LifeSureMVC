@model Services
@{
    ViewBag.Title = "UpdateService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-title">
    <div class="row">
        <div class="col-12 col-md-6 order-md-1 order-last">
            <h3>Hizmet Güncelle</h3>
            <p class="text-subtitle text-muted">Hizmetler bölümünün güncelleme işlemini buradan gerçekleştirebilirsiniz.</p>
        </div>
        <div class="col-12 col-md-6 order-md-2 order-first">
            <nav aria-label="breadcrumb" class='breadcrumb-header'>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Hizmetler</li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<section>
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <div class="col-md-12">
                    <form method="post">
                        <input type="hidden" name="ServiceId" value="@Model.ServiceId" />
                        <div class="form-group">
                            <label>BAŞLIK</label>
                            <input type="text" class="form-control" name="Title" value="@Model.Title">
                        </div>
                        <div class="form-group">
                            <label>İKON URL</label>
                            <input type="text" class="form-control" name="Icon" value="@Model.Icon">
                        </div>
                        <div class="form-group">
                            <label>AÇIKLAMA</label>
                            <textarea class="form-control" rows="5" name="Description">@Model.Description</textarea>
                        </div>
                        <button class="btn btn-primary">Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
