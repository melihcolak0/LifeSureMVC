@model Members 
@{
    ViewBag.Title = "UpdateMember";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="page-title">
    <div class="row">
        <div class="col-12 col-md-6 order-md-1 order-last">
            <h3>Ekip Üyesi Güncelle</h3>
            <p class="text-subtitle text-muted">Ekip Üyeleri bölümünün güncelleme işlemini buradan gerçekleştirebilirsiniz.</p>
        </div>
        <div class="col-12 col-md-6 order-md-2 order-first">
            <nav aria-label="breadcrumb" class='breadcrumb-header'>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Ekip Üyeleri</li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<section>
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <div class="col-md-12">
                    <form method="post">
                        <input type="hidden" name="MemberId" value="@Model.MemberId" />
                        <div class="form-group">
                            <label>ADI VE SOYADI</label>
                            <input type="text" class="form-control" name="NameSurname" value="@Model.NameSurname">
                        </div>
                        <div class="form-group">
                            <label>MESLEK</label>
                            <input type="text" class="form-control" name="Profession" value="@Model.Profession">
                        </div>
                        <div class="form-group">
                            <label>RESİM URL</label>
                            <input type="text" class="form-control" name="ImageUrl" value="@Model.ImageUrl">
                        </div>
                        <div class="form-group">
                            <label>TWITTER URL</label>
                            <input type="text" class="form-control" name="TwitterUrl" value="@Model.TwitterUrl">
                        </div>
                        <div class="form-group">
                            <label>LINKEDIN URL</label>
                            <input type="text" class="form-control" name="LinkedinUrl" value="@Model.LinkedinUrl">
                        </div>
                        <button class="btn btn-primary">Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
