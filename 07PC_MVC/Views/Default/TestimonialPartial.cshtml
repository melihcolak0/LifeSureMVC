@model List<Testimonials>
<!-- Testimonial Start -->
<div class="container-fluid testimonial pb-5">
    <div class="container pb-5">
        <div class="text-center mx-auto pb-5 wow fadeInUp" data-wow-delay="0.2s" style="max-width: 800px;">
            <h4 class="text-primary">Referanslarımız</h4>
            <h1 class="display-4 mb-4">Müşterilerimiz Hakkımızda Ne Söyledi?</h1>
            <p class="mb-0">
                Müşteri memnuniyetini her zaman ön planda tutan firmamız, bugüne kadar bireysel ve kurumsal alanda birçok başarılı iş birliğine imza atmıştır. Güvenilir hizmet anlayışımız sayesinde çalıştığımız firmalar ve bireyler tarafından tavsiye edilen bir marka haline geldik. Bizimle çalışan her müşterimiz, uzun vadeli çözüm ortağımızdır.
            </p>
        </div>
        <div class="owl-carousel testimonial-carousel wow fadeInUp" data-wow-delay="0.2s">
            @foreach (var item in Model)
            {
                <div class="testimonial-item bg-light rounded">
                    <div class="row g-0">
                        <div class="col-4  col-lg-4 col-xl-3">
                            <div class="h-100">
                                <img src="@item.ImageUrl" class="img-fluid h-100 rounded" style="object-fit: cover;" alt="">
                            </div>
                        </div>
                        <div class="col-8 col-lg-8 col-xl-9">
                            <div class="d-flex flex-column my-auto text-start p-4">
                                <h4 class="text-dark mb-0">@item.NameSurname</h4>
                                <p class="mb-3">@item.Profession</p>
                                <div class="d-flex text-primary mb-3">
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                </div>
                                <p class="mb-0">
                                    @item.Description
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- Testimonial End -->
