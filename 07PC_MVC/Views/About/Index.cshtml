@model Abouts
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-title">
    <div class="row">
        <div class="col-12 col-md-6 order-md-1 order-last">
            <h3>Hakkında</h3>
            <p class="text-subtitle text-muted">Hakkında bölümünü buradan güncelleyebilirsiniz</p>
        </div>
        <div class="col-12 col-md-6 order-md-2 order-first">
            <nav aria-label="breadcrumb" class='breadcrumb-header'>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Hakkında</li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<section class="section">
    <div class="row">
        <div class="col">
            <div class="card">                
                <div class="card-body">
                    @using (Html.BeginForm("Index", "About", FormMethod.Post))
                    {
                        <!-- Html.HiddenFor(x => x.AboutId)  Eğer birden fazla About kaydı varsa kullanılmalı -->

                        <div class="form-group mb-3">
                            <label>Hakkında Açıklaması</label>
                            @Html.TextAreaFor(x => x.Description, new { @class = "form-control", rows = 5 })
                        </div>

                        <button type="submit" class="btn btn-warning">Güncelle</button>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
